@{
    Layout = "_Layout";
}

@model IEnumerable<User>


<section class="jumbotron text-left">
    <h2>App users list</h2>
    <br/>
    <br/>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        @item.FirstName, @item.LastName
                    </div>
                    <div class="col-md-4">
                        @item.Email
                    </div>
                    <div class="col-md-2">
                        @(item.Deleted ? "Disabled" : "Enabled")
                    </div>
                    <div class="col-md-2">
                        <a asp-controller="User" asp-action="ActivateUser"
                           asp-route-id="@item.Id"
                           class="btn btn-default">@(item.Deleted ? "Activate" : "Deactivate")</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

